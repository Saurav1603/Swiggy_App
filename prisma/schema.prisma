model Pricing {
  id            String      @id @default(cuid())
  request       UserRequest @relation(fields: [requestId], references: [id])
  requestId     String      @unique
  foodPrice     Float
  deliveryFee   Float
  platformFee   Float
  serviceCharge Float
  total         Float
}

model Payment {
  id        String      @id @default(cuid())
  request   UserRequest @relation(fields: [requestId], references: [id])
  requestId String      @unique
  utrNumber String
  paidAt    DateTime    @default(now())
  verified  Boolean     @default(false)
}

model Tracking {
  id          String      @id @default(cuid())
  request     UserRequest @relation(fields: [requestId], references: [id])
  requestId   String      @unique
  trackingUrl String?
  eta         String?
  partnerName String?
}
