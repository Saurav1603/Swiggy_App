generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id             String         @id @default(uuid())
  email          String         @unique
  password       String
  createdAt      DateTime       @default(now())
  name           String         @default("Admin")
  status         AdminStatus    @default(available)
  assignedOrders Order[]
  declines       OrderDecline[]
}

model UserRequest {
  id           String    @id @default(cuid())
  name         String
  phone        String
  address      String
  cartImageUrl String
  notes        String?
  status       String    @default("WAITING_FOR_PRICE")
  createdAt    DateTime  @default(now())
  remarks      String?
  orders       Order[]
  payment      Payment?
  pricing      Pricing?
  tracking     Tracking?
}

model Order {
  id              String         @id @default(uuid())
  requestId       String?
  status          OrderStatus    @default(pending)
  assignedAdminId String?
  createdAt       DateTime       @default(now())
  expiresAt       DateTime?
  assignedAdmin   Admin?         @relation(fields: [assignedAdminId], references: [id])
  request         UserRequest?   @relation(fields: [requestId], references: [id])
  declines        OrderDecline[]
}

model OrderDecline {
  id        String   @id @default(uuid())
  orderId   String
  adminId   String
  createdAt DateTime @default(now())
  admin     Admin    @relation(fields: [adminId], references: [id])
  order     Order    @relation(fields: [orderId], references: [id])

  @@unique([orderId, adminId])
}

model Pricing {
  id            String      @id @default(cuid())
  requestId     String      @unique
  foodPrice     Float
  deliveryFee   Float
  platformFee   Float
  serviceCharge Float
  total         Float
  request       UserRequest @relation(fields: [requestId], references: [id])
}

model Payment {
  id        String      @id @default(cuid())
  requestId String      @unique
  utrNumber String
  paidAt    DateTime    @default(now())
  verified  Boolean     @default(false)
  request   UserRequest @relation(fields: [requestId], references: [id])
}

model Tracking {
  id          String      @id @default(cuid())
  requestId   String      @unique
  trackingUrl String?
  eta         String?
  partnerName String?
  request     UserRequest @relation(fields: [requestId], references: [id])
}

enum AdminStatus {
  available
  busy
  offline
}

enum OrderStatus {
  pending
  broadcasted
  accepted
  declined
  in_progress
  completed
  expired
}
