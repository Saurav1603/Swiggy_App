# Database (Postgres recommended; for local dev you can use SQLite by switching provider in schema.prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/swiggy_concierge?schema=public"

# JWT secret for admin auth
JWT_SECRET="change-me-to-a-random-string"

# Cloudinary (for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="your-unsigned-upload-preset"

# UPI payment info shown to customers
